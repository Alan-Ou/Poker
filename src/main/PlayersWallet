package WindowTest;
import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.TextField;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.GridPane;
import javafx.geometry.Pos;
import javafx.geometry.HPos;
import javafx.geometry.Insets;
import javafx.stage.Stage;

public class PlayersWallet extends Application {
	private TextField tfBettingMoney = new TextField();
	private Button btBet = new Button("Bet");
	private Button btBigBet = new Button("All in");
	public void start(Stage primaryStage) {
		// Create UI
		GridPane pane = new GridPane();
		pane.setVgap(5);
		pane.setHgap(5);
		pane.add(new Label("Betting Money:"), 0, 0);
		pane.add(tfBettingMoney, 1, 0);
		pane.add(btBet, 1, 4);
		pane.add(btBigBet, 1, 4);
		pane.setAlignment(Pos.CENTER);
		tfBettingMoney.setAlignment(Pos.BOTTOM_RIGHT);
		pane.setHalignment(btBet, HPos.RIGHT);
		pane.setPadding(new Insets(10, 10, 10, 10));
		Scene scene = new Scene(pane);
		primaryStage.setTitle("Bet Money Window"); // Set the stage title
		primaryStage.setScene(scene); // Place the scene in the stage
		primaryStage.show(); // Display the stage

}

}
